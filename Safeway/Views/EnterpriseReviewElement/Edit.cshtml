@model Safeway.ViewModel.EnterpriseReviewElementVMs.EnterpriseReviewElementVM

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.Two">
        <wt:textbox field="Entity.ElementName" />
        <wt:combobox field="Entity.Level" />
        <wt:textbox field="Entity.Order" />
        <wt:textbox field="Entity.TotalScore" />
        <wt:textbox field="Entity.ScoringMethod" />
        <wt:textbox field="Entity.ParentElementId" />
        <wt:combobox field="Entity.EvaluationType" />
    </wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>